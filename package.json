  },
  "homepage": "https://github.com/cshanebrown78/GroceryList#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.2.0",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.5",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.27",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
